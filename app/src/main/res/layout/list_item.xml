<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height">

    <ImageView
        android:id="@+id/word_image"
        android:layout_width="@dimen/list_item_height"
        android:layout_height="@dimen/list_item_height"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:id="@+id/list_item_text_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_toRightOf="@id/word_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/default_word"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:paddingLeft="@dimen/list_item_left_padding"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="lutti" />

        <TextView
            android:id="@+id/miwok_word"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:paddingLeft="@dimen/list_item_left_padding"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            tools:text="one" />
        >
    </LinearLayout>

    <ImageView
        android:id="@+id/play_button"
        android:layout_width="@dimen/ic_size"
        android:layout_height="@dimen/ic_size"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/list_item_left_padding"
        android:layout_centerVertical="true"
        android:src="@drawable/baseline_play_arrow_white_24" />


</RelativeLayout>